
@{
    ViewBag.Title = "Reservar - FullDay";
    string mensaje = ViewBag.ErrorMensaje;
    bool mostrarFechaVijae = ViewBag.FechaViaje;
    string maximaFecha = ViewBag.FechaMaxima;
}

@model ReservaEntidades.ReservaFullDay

@if (mensaje!="")
{
    <label class="alert-danger center-block">@mensaje</label>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="text-align:center; color:dodgerblue;">Reservar FullDay </h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <p></p>


        </div>
        <div class="row">

            <div class="col-md-offset-1 col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Apellido, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-offset-1 col-md-5">
                <div class="form-group">
                    @Html.Label("Dni", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Dni_cliente, new { @type = "number", @class = "form-control", max = "99999999", required = "required" })
                        @Html.ValidationMessageFor(model => model.Dni_cliente, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.Label("Teléfono", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Telefono, new {  @type = "number", @class = "form-control", required = "required", max="9999999999" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 col-md-offset-1 ">

                <div class="form-group">

                    @Html.Label("Cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.cantidad, new { @Value = "1", @type = "number", @class = "form-control", min = "1", required = "required" })

                        @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.Label("Correo", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.correo, new { @type = "email", @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-5 col-md-offset-1 ">
                @if (@mostrarFechaVijae)
                {
                    <div class="form-group">
                        @Html.Label("Fecha de viaje", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Fecha_Viaje, new { @Value = DateTime.Now.ToString("yyyy-MM-dd"), @type = "date", @class = "form-control", required = "required", max=maximaFecha, })

                            @Html.ValidationMessageFor(model => model.Fecha_Viaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }


            </div>
            
            <div class="col-md-offset-2  col-md-2">
                <div class="form-group">
                    
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    
                </div>
            </div>
        </div>




    </div>
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
